  "字段说明": {
    "name": "分类名称 (必填)",
    "description": "分类描述 (可选)",
    "parentId": "父分类ID，一级分类传null或不传 (可选)",
    "level": "分类层级，默认为1 (可选)",
    "sort": "排序号，数字越小越靠前，默认为0 (可选)"
  },
  "请求示例": {
